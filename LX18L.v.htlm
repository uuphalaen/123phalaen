<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>罗霞十八岁生日快乐</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        /* 引入手写字体 */
        @import url('https://fonts.googleapis.com/css2?family=Ma+Shan+Zheng&display=swap');
        body {
            overflow: hidden;
            background-color: #fff9e6; /* 淡黄色主背景 */
            touch-action: manipulation;
            font-family: "Microsoft YaHei", sans-serif;
        }
        .screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            display: none;
            padding: 10px;
            background-color: #fff9e6;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .screen.active {
            display: flex;
        }

        /* 画面1：密码弹窗 - 黄蓝配色 */
        #screen1 .popup {
            width: 90%;
            max-width: 320px;
            background: linear-gradient(135deg, #fff9e6, #e6f7ff);
            border-radius: 20px;
            padding: 30px 20px;
            text-align: center;
            box-shadow: 0 4px 12px rgba(102, 179, 255, 0.2);
            border: 1px solid #b3d9ff;
        }
        #screen1 h2 {
            color: #2980b9;
            font-size: 24px;
            margin-bottom: 25px;
            letter-spacing: 2px;
        }
        .password-input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #b3d9ff;
            border-radius: 12px;
            margin-bottom: 20px;
            font-size: 16px;
            text-align: center;
            background-color: #fff;
        }
        .btn {
            padding: 10px 25px;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            margin: 0 8px;
            cursor: pointer;
        }
        .btn-confirm {
            background-color: #3498db;
            color: #fff;
        }

        /* 新增：密码错误提示气泡样式 - 粉色主题 */
        .error-bubble {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            background: linear-gradient(135deg, #ffc2d1, #ffafcc);
            color: #fff;
            padding: 10px 20px;
            border-radius: 15px;
            font-size: 14px;
            box-shadow: 0 2px 8px rgba(255, 129, 170, 0.3);
            z-index: 1000;
            opacity: 0;
            animation: errorFade 2s ease forwards;
        }
        @keyframes errorFade {
            0% { opacity: 0; transform: translate(-50%, -10px); }
            20% { opacity: 1; transform: translate(-50%, 0); }
            80% { opacity: 1; transform: translate(-50%, 0); }
            100% { opacity: 0; transform: translate(-50%, -10px); }
        }

        /* 画面2：气泡专属页 - 黄蓝主题 */
        #screen2 {
            justify-content: flex-start;
            padding-bottom: 80px;
            position: relative;
            overflow: hidden;
        }
        /* 按钮样式：位置不变，默认隐藏，文字替换 */
        .btn-next {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 999;
            background-color: #3498db;
            color: #fff;
            border: none;
            padding: 10px 25px;
            border-radius: 12px;
            font-size: 16px;
            cursor: pointer;
            display: none; /* 默认隐藏 */
            text-align: center; /* 按钮文字居中 */
        }
        /* 恢复气泡初始大小 */
        .bubble {
            position: absolute;
            padding: 35px 40px;
            border-radius: 40px;
            color: white;
            font-size: 22px;
            max-width: 300px;
            min-width: 260px;
            text-align: center;
            z-index: 99;
            opacity: 0;
            transform: scale(0);
            animation: bubblePop 0.3s ease-out forwards, bubbleFade 0.5s ease-out 4.5s forwards;
        }
        .bubble span {
            display: block;
            line-height: 1.5;
        }
        .bubble:nth-child(3n+1) { background: linear-gradient(135deg, #ff9a9e, #fecfef); }
        .bubble:nth-child(3n+2) { background: linear-gradient(135deg, #a1c4fd, #c2e9fb); }
        .bubble:nth-child(3n+3) { background: linear-gradient(135deg, #ffecd2, #fcb69f); }
        @keyframes bubblePop {
            0% { opacity: 0; transform: scale(0); }
            80% { opacity: 1; transform: scale(1.1); }
            100% { opacity: 1; transform: scale(1); }
        }
        @keyframes bubbleFade {
            0% { opacity: 1; transform: scale(1); }
            100% { opacity: 0; transform: scale(0); }
        }
        /* 修改final-title样式：标题居中加粗、其他文字居左、黑色字体、适配屏幕 */
        .final-title {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 90;
            font-family: 'Ma Shan Zheng', cursive;
            color: #000;
            width: 90%;
            max-width: 500px;
        }
        .final-title .line1 {
            text-align: center; /* 标题居中 */
            font-weight: bold; /* 标题加粗 */
        }
        .final-title div {
            font-size: 20px;
            opacity: 0;
            animation: titleFadeIn 1.5s ease forwards;
            line-height: 1.8;
            margin: 4px 0;
            word-wrap: break-word;
            text-align: left; /* 其他文字居左 */
        }
        /* 逐行延迟动画：最后一行文字11s显示完成 */
        .final-title .line1 { animation-delay: 8s; }
        .final-title .line2 { animation-delay: 8.75s; }
        .final-title .line3 { animation-delay: 9.5s; }
        .final-title .line4 { animation-delay: 10.25s; }
        @keyframes titleFadeIn {
            to { opacity: 1; }
        }

        /* 画面3：草莓巧克力蛋糕页 - 核心修改：巧克力蛋糕体+粉色条纹+巧克力淋面 */
        #screen3 {
            justify-content: flex-start;
            padding-top: 50px;
        }
        .cake-container {
            width: 100%;
            height: 50vh;
            position: relative;
            display: flex;
            align-items: flex-end;
            justify-content: center;
            cursor: pointer;
            margin-bottom: 30px;
        }
        /* 巧克力蛋糕层 */
        .cake-layer {
            position: absolute;
            height: 50px;
            background-color: #5d3a13; /* 巧克力色蛋糕体 */
            border-radius: 8px;
            left: 50%;
            transform: translateX(-50%);
            opacity: 0;
            animation: cakeFall 1.2s ease forwards;
        }
        /* 粉色条纹装饰 */
        .layer1::after,
        .layer2::after,
        .layer3::after {
            content: "";
            position: absolute;
            top: 8px;
            left: 8px;
            right: 8px;
            height: 6px;
            background-color: #ffc0cb; /* 粉色条纹 */
            border-radius: 3px;
        }
        /* 顶层巧克力淋面 */
        .layer3::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 10px;
            background: linear-gradient(135deg, #4a2c2a 0%, #7d4427 100%);
            border-radius: 8px 8px 0 0;
        }
        .layer1 { 
            width: 180px;
            bottom: 0; 
            animation-delay: 0.5s; 
            z-index: 1;
        }
        .layer2 { 
            width: 140px;
            bottom: 50px; 
            animation-delay: 1.7s; 
            z-index: 2;
        }
        .layer3 { 
            width: 100px;
            bottom: 100px; 
            animation-delay: 2.9s; 
            z-index: 3;
        }
        @keyframes cakeFall {
            0% { opacity: 0; transform: translate(-50%, -80px); }
            100% { opacity: 1; transform: translate(-50%, 0); }
        }
        .candle {
            position: absolute;
            width: 8px;
            height: 25px;
            background-color: #fff;
            border-radius: 2px 2px 0 0;
            left: 50%;
            transform: translateX(-50%);
            bottom: 150px; 
            opacity: 0;
            animation: candleShow 0.5s ease forwards;
            animation-delay: 4.1s; 
            z-index: 5;
            border: 1px solid #b3d9ff;
        }
        .flame {
            position: absolute;
            width: 12px;
            height: 20px;
            background: linear-gradient(to top, #ff9500, #fffb00);
            border-radius: 50% 50% 20% 20%;
            left: 50%;
            transform: translateX(-50%);
            bottom: 175px; 
            opacity: 0;
            animation: flameShow 0.5s ease forwards, flameFlicker 1s ease-in-out infinite alternate;
            animation-delay: 4.6s; 
            z-index: 6;
        }
        .flame.blown {
            animation: flameBlow 0.3s ease forwards;
        }
        @keyframes candleShow {
            from { opacity: 0; transform: translate(-50%, -10px); }
            to { opacity: 1; transform: translate(-50%, 0); }
        }
        @keyframes flameShow {
            from { opacity: 0; transform: translate(-50%, -5px) scale(0.5); }
            to { opacity: 1; transform: translate(-50%, 0) scale(1); }
        }
        @keyframes flameFlicker {
            from { transform: translateX(-50%) scale(1); border-radius: 50% 50% 20% 20%; }
            to { transform: translateX(-45%) scale(1.1); border-radius: 40% 60% 20% 30%; }
        }
        @keyframes flameBlow {
            0% { opacity: 1; transform: translateX(-50%) scale(1); }
            50% { opacity: 0.5; transform: translateX(-40%) scale(0.8); }
            100% { opacity: 0; transform: translateX(-30%) scale(0.2); }
        }

        /* 黄蓝色系气泡通知栏样式 */
        .notify-bubble {
            background: linear-gradient(135deg, #ffecd2, #c2e9fb);
            border-radius: 20px;
            padding: 15px 25px;
            text-align: center;
            color: #2980b9;
            font-size: 18px;
            box-shadow: 0 3px 10px rgba(102, 179, 255, 0.2);
            z-index: 100;
            display: none;
        }
        .notify-bubble p {
            margin: 5px 0;
        }
        .notify-btn {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 10px;
            margin-top: 10px;
            cursor: pointer;
            font-size: 16px;
        }

        /* 画面4：文字页 */
        #screen4 .final-text {
            font-size: 20px;
            color: #000;
            text-align: center;
            line-height: 2.5;
            padding: 0 20px;
        }
        #screen4 .final-text span {
            display: block;
            opacity: 0;
            animation: textFadeIn 0.8s ease forwards;
        }
        #screen4 .final-text span:nth-child(1) { animation-delay: 0s; }
        #screen4 .final-text span:nth-child(2) { animation-delay: 1s; }
        #screen4 .final-text span:nth-child(3) { animation-delay: 2s; }
        #screen4 .final-text span:nth-child(4) { animation-delay: 3s; }
        #screen4 .final-text span:nth-child(5) { animation-delay: 4s; }
        #screen4 .final-text span:nth-child(6) { animation-delay: 5s; }
        #screen4 .final-text span:nth-child(7) { animation-delay: 6s; }
        #screen4 .final-text span:nth-child(8) { animation-delay: 7s; }
        #screen4 .final-text span:nth-child(9),
        #screen4 .final-text span:nth-child(10) { 
            animation-delay: 8s;
            color: #000;
        }
        @keyframes textFadeIn {
            0% { opacity: 0; transform: translateY(5px); }
            100% { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <!-- 画面1：密码页 -->
    <div id="screen1" class="screen active">
        <div class="popup">
            <h2>小虾米</h2>
            <input type="password" class="password-input" placeholder="请输入密码" id="password">
            <div>
                <button class="btn btn-confirm" id="confirmBtn">确定</button>
            </div>
        </div>
    </div>

    <!-- 画面2：气泡页 - 文字排版调整、标题加粗居中 -->
    <div id="screen2" class="screen">
        <div class="final-title">
            <div class="line1">地球online【系统提示】</div>
            <div class="line2">尊敬的小虾米玩家您好：</div>
            <div class="line3">  恭喜您通关17L.v副本！地球online已更新至最新版本，您的主线任务已更新完毕，本次更新将开放新地图及新副本，并随机刷新全新NPC，请继续向前探索，感谢您对地球online游戏的支持与喜爱。</div>
            <div class="line4">  恭喜进阶人生L.v18！</div>
        </div>
        <!-- 按钮文字分两行 -->
        <button class="btn-next" onclick="goToScreen3()">进入<br>地球onlineL.v18</button>
    </div>

    <!-- 画面3：草莓巧克力蛋糕页 - 移除草莓装饰标签 -->
    <div id="screen3" class="screen">
        <div class="cake-container" id="cakeContainer">
            <div class="cake-layer layer1"></div>
            <div class="cake-layer layer2"></div>
            <div class="cake-layer layer3"></div>
            <div class="candle"></div>
            <div class="flame" id="flame"></div>
        </div>
        <!-- 第一个气泡通知栏 -->
        <div class="notify-bubble" id="notify1">
            <p>许个愿吧！</p>
            <button class="notify-btn" id="btnYes">好</button>
        </div>
        <!-- 第二个气泡通知栏 -->
        <div class="notify-bubble" id="notify2">
            <p>许好了？可以吹蜡烛啦！</p>
            <button class="notify-btn" id="btnBlow">呼~</button>
        </div>
    </div>

    <!-- 画面4：文字页 - 新增署名和日期 -->
    <div id="screen4" class="screen">
        <div class="final-text">
            <span>Hi!我是小羊汁~</span>
            <span>18岁生日快乐呀罗霞</span>
            <span>最近过的怎么样≧∇≦</span>
            <span>天天开心哦 天冷注意保暖</span>
            <span>多喝热水呀</span>
            <span>不知不觉我们认识这么久了</span>
            <span>这是我们一起过的第三个生日</span>
            <span>来日方长呀小虾米</span>
            <span>——wy</span>
            <span>2025/12/14</span>
        </div>
    </div>

    <script>
        const screen1 = document.getElementById('screen1');
        const screen2 = document.getElementById('screen2');
        const screen3 = document.getElementById('screen3');
        const screen4 = document.getElementById('screen4');
        const confirmBtn = document.getElementById('confirmBtn');
        const passwordInput = document.getElementById('password');
        const cakeContainer = document.getElementById('cakeContainer');
        const flame = document.getElementById('flame');
        const notify1 = document.getElementById('notify1');
        const notify2 = document.getElementById('notify2');
        const btnYes = document.getElementById('btnYes');
        const btnBlow = document.getElementById('btnBlow');
        const btnNext = document.querySelector('.btn-next');

        let isBlown = false;

        // 密码验证 - 新增错误提示逻辑
        confirmBtn.addEventListener('click', () => {
            if (passwordInput.value === '1025') {
                screen1.classList.remove('active');
                screen2.classList.add('active');
                startBubblePop();
                // 文字全部显示后（11.5s）显示按钮
                setTimeout(() => {
                    btnNext.style.display = 'block';
                }, 11500);
            } else {
                // 创建错误提示气泡
                const errorBubble = document.createElement('div');
                errorBubble.className = 'error-bubble';
                errorBubble.textContent = '笨！你的农历生日呀！';
                screen1.appendChild(errorBubble);
                // 气泡消失后移除元素
                setTimeout(() => {
                    errorBubble.remove();
                }, 2000);
                // 清空输入框
                passwordInput.value = '';
            }
        });

        // 页面切换：点击按钮后隐藏按钮并跳转
        function goToScreen3() {
            btnNext.style.display = 'none';
            screen2.classList.remove('active');
            screen3.classList.add('active');
            // 显示第一个气泡通知栏
            setTimeout(() => {
                notify1.style.display = 'block';
            }, 5000); 
        }

        function goToScreen4() {
            screen3.classList.remove('active');
            screen4.classList.add('active');
        }

        // 气泡弹出逻辑
        const totalBubbles = 30;
        const popInterval = 250; 
        const popCountPerTime = 3; 
        let createdCount = 0;
        let timer = null;

        function startBubblePop() {
            timer = setInterval(() => {
                if (createdCount >= totalBubbles) {
                    clearInterval(timer);
                    return;
                }
                const actualPop = Math.min(popCountPerTime, totalBubbles - createdCount);
                createBubbleBatch(actualPop);
                createdCount += actualPop;
            }, popInterval);
        }

        function createBubbleBatch(count) {
            const allBlessings = [
                {line1: "小虾米", line2: "前程似锦"},
                {line1: "小虾米", line2: "平安喜乐"},
                {line1: "小虾米", line2: "天天开心"},
                {line1: "小虾米", line2: "万事顺意"},
                {line1: "小虾米", line2: "福气满满"},
                {line1: "小虾米", line2: "元气满满"},
                {line1: "小虾米", line2: "闪闪发光"},
                {line1: "小虾米", line2: "被爱包围"},
                {line1: "小虾米", line2: "学业进步"},
                {line1: "小虾米", line2: "永远灿烂"},
                {line1: "小虾米", line2: "岁岁无忧"},
                {line1: "小虾米", line2: "朝朝欢喜"},
                {line1: "小虾米", line2: "未来可期"},
                {line1: "小虾米", line2: "越来越美"},
                {line1: "小虾米", line2: "快乐万岁"},
                {line1: "小虾米", line2: "好运连连"},
                {line1: "小虾米", line2: "勇敢热烈"},
                {line1: "小虾米", line2: "日子超甜"},
                {line1: "小虾米", line2: "一路繁花"},
                {line1: "小虾米", line2: "做最好的"},
                {line1: "小虾米", line2: "生日超甜"},
                {line1: "小虾米", line2: "笑口常开"},
                {line1: "小虾米", line2: "称心如意"},
                {line1: "小虾米", line2: "星光璀璨"},
                {line1: "小虾米", line2: "平安喜乐"},
                {line1: "小虾米", line2: "顺遂无忧"},
                {line1: "小虾米", line2: "平安喜乐"},
                {line1: "小虾米", line2: "平安顺遂"},
                {line1: "小虾米", line2: "幸福久久"},
                {text: "虾米易烊千玺999"}
            ];
            const screenW = screen2.clientWidth;
            const screenH = screen2.clientHeight;
            for (let i = 0; i < count; i++) {
                const idx = createdCount + i;
                const blessing = allBlessings[idx % allBlessings.length]; 
                const bubble = document.createElement('div');
                bubble.className = 'bubble';
                if (blessing.text) {
                    bubble.textContent = blessing.text;
                } else {
                    bubble.innerHTML = `<span>${blessing.line1}</span><span>${blessing.line2}</span>`;
                }
                screen2.appendChild(bubble);
                
                const bubbleW = bubble.offsetWidth;
                const bubbleH = bubble.offsetHeight;
                const maxLeft = screenW - bubbleW - 20;
                const maxTop = screenH - bubbleH - 100;
                const left = Math.max(10, Math.floor(Math.random() * maxLeft));
                const top = Math.max(10, Math.floor(Math.random() * maxTop));
                
                bubble.style.left = `${left}px`;
                bubble.style.top = `${top}px`;
            }
        }

        // 气泡通知栏交互
        btnYes.addEventListener('click', () => {
            notify1.style.display = 'none';
            setTimeout(() => {
                notify2.style.display = 'block';
            }, 500);
        });

        btnBlow.addEventListener('click', () => {
            notify2.style.display = 'none';
            if (!isBlown) {
                flame.classList.add('blown');
                isBlown = true;
                setTimeout(() => {
                    goToScreen4();
                }, 1000);
            }
        });
    </script>
</body>
</html>
